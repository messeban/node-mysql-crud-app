</nav>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>

        <% if (syndic) { %>
        <form class="add-immeuble-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" name="nom" id="nom" placeholder="Nom" value="<%= syndic.nom%>" required>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="<%= syndic.email%>" required>
                    </div>
                </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="adresse" id="adresse" placeholder="Adresse" value="<%= syndic.adresse%>" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="commune" id="commune" placeholder="Commune" value="<%= syndic.commune%>" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number" min="1000" max="9999" class="form-control" name="code_postal" id="code-postal" placeholder="Code Postal" value="<%= syndic.code_postal%>" required>
                </div>
            </div>
            <button type="button"  class="btn  btn-danger" onclick="window.location.href='/deleteSyndic/<%= syndic.immeubleID %>'">Delete</button>

            <button type="submit" class="btn btn-primary float-right">Appliquer modification</button>
        </form>

        <% } else { %>
            <p class="text-center">Syndic pas Touv√©. Appuyez- <a href="/addSyndic">ici</a> pour ajouter un immeuble.</p>
        <% } %>

    </div>
</div>
</body>
</html>